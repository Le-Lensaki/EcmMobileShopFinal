    <script>
        $(document).ready(function () {
            // Xoá class active khỏi thẻ a có class nav-link active
            $('.nav-link.active').removeClass('active');
            // Lấy URL hiện tại của trang
            var url = window.location.href;

            // Cắt chuỗi URL và thêm vào href của thẻ a
            var newHref = url.split('://')[1].split('/').slice(1).join('/');
            $('.nav-link[href="/' + newHref + '"]').addClass('active');
        });

    </script>
